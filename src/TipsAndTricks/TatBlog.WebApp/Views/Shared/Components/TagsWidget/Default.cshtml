@model IList<TagItem>

<h3 class="text-success mb-2">
    Tags Cloud
</h3>

@foreach (var item in Model) {
    <a asp-controller="Blog"
   asp-action="Tag"
   asp-route-slug="@item.UrlSlug"
       title="Tag : @item.Name"
       class="btn btn-sm btn-outline-secondary m-1">
        @item.Name (@item.PostCount)
    </a>
}
